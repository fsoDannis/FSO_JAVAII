package com.dannis.javaii_week1;


import com.dannis.javaii_week1.MainActivity.ButtonClickHandler;

import android.app.Activity;
import android.content.Intent;
import android.os.Bundle;
import android.view.View;
import android.widget.Button;
import android.widget.EditText;
import android.widget.TextView;

public class SubScreen extends Activity {
	TextView greetMsg;
	EditText nameEditCtrl;
	Button btnCtlr;
	String name;

	/** Called when the activity is first created. */
	@Override
	public void onCreate(Bundle savedInstanceState) {
		super.onCreate(savedInstanceState);
		setContentView(R.layout.activity_subscreen);
		greetMsg = (TextView) findViewById(R.id.textView1);
		Intent intename = getIntent();
		String uname = (String) intename.getSerializableExtra("USERNAME");
		greetMsg.setText("Welcome " + uname);
		btnCtlr = (Button) findViewById(R.id.button2);
		btnCtlr.setOnClickListener(new ButtonClickHandler());
	}

	public class ButtonClickHandler implements View.OnClickListener {
		public void onClick(View view) {
			if (nameEditCtrl != null && nameEditCtrl.getText().length() != 0) {
				name = nameEditCtrl.getText().toString();
			} else {
				name = "Guest";
			}
			Intent intObj = new Intent(SubScreen.this,
					MainActivity.class);
			intObj.putExtra("USERNAME", name);
			startActivity(intObj);
		}
	}
}

